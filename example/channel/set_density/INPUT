# Simulation box dimensions (in nanometers)
# if you do slit, xbox ybox zbox can be ignored
xbox           = 5             # Box length in X direction (nm)
ybox           = 6             # Box length in Y direction (nm)
zbox           = 10            # Box length in Z direction (nm)
bulk_xbox      = 5             # Box length in bulk_X direction (nm)
bulk_ybox      = 6             # Box length in bulk_Y direction (nm)
bulk_zbox      = 10            # Box length in bulk_Z direction (nm)

# input file prefixes (without extensions)
TOP            = topol         # Prefix for topology file (e.g., 'topology')
bulk_top       = bulk_top      # Prefix for bulk topology file (e.g., 'topology')
MDP            = grompp        # Prefix for mdp file (e.g., 'grompp')
mini_MDP       = mini          # Prefix for Energy Minimization mdp file (e.g., 'mini')
packmol        = packmol       # Prefix for packmol inp file (e.g., 'packmol')
bulk_pa        = bulk_pack     # Prefix for bulk packmol inp file (e.g., 'packmol')

# gromacs settings
GMXRC          = /share/home/app/gromacs-2020.4/bin/GMXRC  # Path to GROMACS environment script (only modeling module)
NPOS           = 4             # Number of OpenMP threads for CPU parallelization
GPU            = 1             # Enable GPU acceleration: 1=yes, 0=no
maxWarn        = 2             # Maximum number of warnings allowed during grompp preprocessing
nsteps_bulk    = 200000        # MD steps for get bulk density run (2 fs/step)
nsteps_den     = 300000        # MD steps for check_density run (electrode)
nsteps_equ     = 1000000       # MD steps for equilibration run
nsteps_ini     = 100000        # MD steps for product initial frames run
XOUT_FRAMES    = 100           # Frequency of tajectory output (in steps), can't be too small, io will become heavy
num_intialframes = 100         # Numbers of initial frames

# Density analysis parameters
NZ             = 100           # Number of slices along Z-axis for density calculation
BE_TIME        = 1000          # Start time for density analysis (in ps, to skip equilibration)
BE_Z           = 22            # Start Z-position for density analysis (in nm)
END_Z          = 28            # End Z-position for density analysis (in nm)
error          = 5             # Allowed density error threshold (%)
max_iter       = 3             # Maximum number of iterations for density adjustment
onlyUP         = 1             # 1=only accept density upper setting; 0=accept both upper and lower settings

# slit parameters 
# molecule names of electrode are EL ER GRA 
LLX            = 3.4           # high of electrode (nm)
LLZ            = 8             # length of slit (nm)
dslit          = 1.5           # high of slit (nm)
len_bulk       = 8             # length of bulk region (nm)
is_auto_top    = 1             # 1=auto generate top/inp file
MOL            = ACN Na CLO    # mol name you want to insert
MOL_num        = 3000 40 40    # Number of each molecule to insert into slit system
MOL_num_bulk   = 3000 40 40    # Number of each molecule to insert into bulk system(NPT)

##This item is used to set the target density in NVT simulations of the electrode system.
#If not set, the target density will be automatically calculated and assigned.
#set_density   = 940            # Target system density (kg/mÂ³)

# modify molecule numbers 
MOL_name       = SOL Na CL    # Space-separated list of molecule/ion names (e.g., for density groups)
FIXED_MOL      = Na Cl        # notice! It's a important and sensitive parameter, please read README.md carefully before you set it.
IS_FORCE_SCALE = 0             # If you set it to 1, and open "FIXED_MOL", You may never reach the correct density!! never!!!
                               # Please read README.md carefully before you set it.
